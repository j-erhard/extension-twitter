{
  "manifest_version": 2,
  "name": "Extension twitter ",
  "description": "Extension twitter pour lutter contre la d√©sinformation",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_popup": "MyPopup.html",
    "default_title": "twitter",
    "browser_style": true
  },

  "web_accessible_resources": [
    "content.js"
  ],

  "permissions": ["activeTab", "tabs"],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
