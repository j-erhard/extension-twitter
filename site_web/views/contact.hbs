            <div class="bg-gray-900 w-full shadow rounded p-8 sm:p-12 -mt-72">
                <form role="form" action="/contact" method="post">
                    <div class="form-group form-group w-full flex flex-col mt-8">
                        <label class = "font-semibold leading-none text-gray-300" for="subject">Sujet</label>
                        <input type="text" name="subject" class="form-control leading-none text-gray-50 p-3 focus:outline-none focus:border-blue-700 mt-4 border-0 bg-gray-800 rounded" required placeholder="Sujet">
                    </div>

                    <div class="form-group  md:flex items-center mt-8 form-group w-full flex flex-col mt-8">
                        <div class="w-full flex flex-col">
                            <label class="font-semibold leading-none text-gray-300 font-semibold leading-none text-gray-300" for="email">Email</label>
                            <input type="email" name="email" class="form-control leading-none text-gray-50 p-3 focus:outline-none focus:border-blue-700 mt-4 border-0 bg-gray-800 rounded" required placeholder="Email">
                        </div>


                        <div class="form-group w-full flex flex-col mt-8">
                            <label class="font-semibold leading-none text-gray-300" for="message">Message</label>
                            <input type = "textarea" name="message" class="form-control h-40 text-base leading-none text-gray-50 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-800 border-0 rounded" required placeholder="Votre message" rows="3"></input>
                        </div>

                        <div class="flex items-center justify-center w-full">
                            <button type="submit" id="submit" class="mt-9 font-semibold leading-none text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none">
                                Envoyer
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
